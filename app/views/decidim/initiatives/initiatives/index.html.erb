<%
  edit_link(
    decidim_admin_initiatives.initiatives_path,
    :read,
    :initiative
  )
%>

<% provide :meta_title, t("initiatives.index.title", scope: "decidim") %>

<%= participatory_space_wrapper do %>
  <div class="row columns">
    <div class="title-action">
      <%= render partial: "index_header" %>
    </div>
  </div>

  <div class="row">
    <div class="columns mediumlarge-4 large-3">
      <%= render partial: "filters_small_view" %>
      <div class="card card--secondary show-for-mediumlarge">
        <%= render partial: "filters" %>
      </div>
    </div>
    <div id="initiatives" class="columns mediumlarge-8 large-9">
      <%= render partial: "initiatives" %>
    </div>
  </div>
  <div class="row align-right">
    <div class="column flex justify-content-end">
      <%# TODO: Change link for transparent trash index %>
      <%= link_to create_initiative_path(:select_initiative_type), class: "title-action__action button" do %>
        <%= t("transparent_trash", scope: "decidim.initiatives.index") %>
      <% end %>
    </div>
  </div>
<% end %>
